<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ronaldinhoaugusto.sistemataxi.ActCadastroMotorista">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="505dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="3dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Cadastrar Motorista"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/lblTextName"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_column="0"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nome: "
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lblTextCPF"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblTextCNH"
            android:layout_column="0"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="CPF: "
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lblTextTelefone"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblTextDataNasc"
            android:layout_column="0"
            android:layout_row="3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Telefone: "
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lblTextCNH"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblTextName"
            android:layout_column="0"
            android:layout_row="4"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="CNH: "
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lblTextDataNasc"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblTextDataAdmissao"
            android:layout_column="0"
            android:layout_row="5"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Data de Nascimento: "
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lblTextDataAdmissao"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblTextCPF"
            android:layout_column="0"
            android:layout_row="6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Data de Admissao: "
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnCadastrarMot"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_column="0"
            android:layout_row="20"
            android:text="Cadastrar Motorista"
            android:textAlignment="center" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
