<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ronaldinhoaugusto.sistemataxi.ActCadastroCorrida">

    <ScrollView
        android:id="@+id/scrolViewCorrida"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewChamada"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Cadastrar Chamada"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIdMotorista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Motorista(ID):"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/lblTextIdMotorista"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:inputType="number"
                android:ems="10"
                android:hint="Digite o ID do Motorista"
                android:padding="4dp"
                android:textColorHint="#39000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtIdAtendente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Atendente(ID):"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/lblTextIdAtendente"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:inputType="number"
                android:ems="10"
                android:hint="Digite o ID do Atendente"
                android:padding="4dp"
                android:textColorHint="#39000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Valor:"
                android:inputType="number"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/lblTextValor"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Digite o Valor"
                android:inputType="number"
                android:padding="4dp"
                android:textColorHint="#39000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtPassageiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Passageiro:"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/lblTextPassageiro"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Digite do passageiro!"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textColorHint="#39000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Origem:"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/lblTextOrigem"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Digite o endereço da origem!"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textColorHint="#39000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/txtDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Destino:"
                android:textColor="#de000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/lblTextDestino"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Digite o endereço do destino!"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textColorHint="#39000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnCadastrarChamada"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                style="@style/ButtonOrange"
                android:text="C A D A S T R A R" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

