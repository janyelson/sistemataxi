<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on_boarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context="com.ronaldinhoaugusto.sistemataxi.Home">
    <TextView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GeTaxi"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/m_left_right"
        android:layout_marginRight="@dimen/m_left_right"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="entrar"
            style="@style/ButtonOrange"/>
        <Button
            android:id="@+id/bt_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cadastrar"
            android:layout_marginTop="@dimen/space20"
            style="@style/ButtonWhite"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/iv_logo"
        android:layout_alignLeft="@+id/ll_bottom"
        android:layout_alignStart="@+id/ll_bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignRight="@+id/ll_bottom"
        android:layout_alignEnd="@+id/ll_bottom">

        <TextView
            android:id="@+id/txtUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Usuario(Cliente):"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/lblTextUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="40"
            android:padding="4dp"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Senha:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/lblTextSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="40"
            android:padding="4dp"
            android:textSize="16sp"
            android:visibility="visible" />

    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:text="Switch" />
</RelativeLayout>